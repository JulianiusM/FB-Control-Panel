doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport",content="width=device-width, initial-scale=1, shrink-to-fit=no")
        block meta
        
        link(rel="icon", type="image/png", sizes="32x32", href="/img/favicon-32x32.png")
        link(rel="icon", type="image/png", sizes="16x16", href="/img/favicon-16x16.png")
        link(rel="icon", type="image/png", sizes="200x200", href="/img/logo.png")
        link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
        link(href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/css/bootstrap4-toggle.min.css" rel="stylesheet")
        block link
        
        script(type="text/javascript", src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
        script(type="text/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.5.1/chart.min.js")
        script(type="text/javascript", src="https://cdn.jsdelivr.net/npm/moment@2.27.0")
        script(type="text/javascript", src="https://cdn.jsdelivr.net/npm/chartjs-adapter-moment@0.1.1")
        script(src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.6.1/js/bootstrap4-toggle.min.js")
        script(type="text/javascript", src="/js/progressbar.min.js")
        script(type="text/javascript", src="/js/module_functions.js")
        block scripts
            //Stub script to avoid js errors on console
            script(type="text/javascript", src="/js/stub.js")

body(onload="init()" class="bg-secondary")
    nav(class="navbar navbar-expand-sm navbar-dark bg-dark sticky-top")
        a(class="navbar-brand mx-auto" href ="/") ControlPanel
        button(class="navbar-toggler", type="button", data-toggle="collapse", data-target="#navbar", aria-controls="navbar", aria-expanded="false", aria-label="Toggle navigation")
            span(class="navbar-toggler-icon")
        div(class="collapse navbar-collapse")
        //
            ul(class="navbar-nav mr-auto ml-sm-3")
                li(class="nav-item")
                    a(class="nav-link", href="/settings", id="settings") Settings
            ul(class="navbar-nav ml-auto")
                hr(class="d-block d-sm-none w-100 border-info")
                
                //Display user (if logged in) or login/register options
                if(data && data.navUser)
                    li(class="nav-item")
                        a(class="nav-link text-info", href="/profile") Hello #{data.navUser}!
                    li(class="nav-item")
                        a(class="nav-link", href="/logout", id="logout") Logout
                else
                    li(class="nav-item")
                        a(class="nav-link", href="/login", id="login") Login
                    li(class="nav-item")
                        a(class="nav-link", href="/register", id="register") Register
                            
    div(class="container-fluid")
        block body
            //Default page body will be displayed as a card
            div(class="card mt-3 bg-dark text-white")
                block title
                div(class="card-body")
                    block content
                    
        //Placeholder at the end of the page for the footer to float above
        div(class="d-block mt-3 mb-0 pt-3 pb-3")
            p
        footer(class="bg-dark text-white text-center mt-3 mb-0 pt-2 pb-1 fixed-bottom")
